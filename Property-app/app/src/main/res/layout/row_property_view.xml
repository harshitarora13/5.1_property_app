<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:padding="10dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgSet"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/img1"/>
        <TextView
            android:id="@+id/txt_pAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Station Street"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_below="@+id/imgSet"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/txt_rentPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="480 PW"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_below="@+id/txt_pAddress"
            android:layout_marginTop="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/txt_rentPW"
            android:layout_marginTop="3dp">
            <TextView
                android:id="@+id/txt_bedrooms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2 Bedrooms"
                android:textColor="@color/black"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/txt_carParks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3 CarParks"
                android:textColor="@color/black"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/txt_bathRooms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2 Bathrooms"
                android:textColor="@color/black"
                android:textSize="12dp"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>